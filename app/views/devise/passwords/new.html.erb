<div >
	<div class="container">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default form-1">
				<h2 class="text-center">Forgot Password?</h2>
					<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  						<%= f.email_field :email, autofocus: true,placeholder: "Your email here" %>
 				
				<div class="actions">
    			<%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block" %>
  			</div>
			<% end %>
		</div>
	</div>
</div>
